@model Gym2.Models.GymClass

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>GymClass</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class = "col-sm-10"> @Model.Name</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.StartTime)</dt>
        <dd class = "col-sm-10">@Model.StartTime</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Duration)</dt>
        <dd class = "col-sm-10">@Model.Duration</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class = "col-sm-10">@Model.Description</dd>
    </dl>
</div>
<div>
	<p>Participans</p>
	@foreach (var p in Model.AppUsers) { 
		<p>@p.AppUser.FullName</p>
	}
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
